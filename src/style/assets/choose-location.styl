#choose
	height 0%
	overflow hidden
	visibility hidden
	text-align: center;
	&.choose--active
		visibility visible
		display: flex;
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		width 100%
		height 100%
		min-width: 100vw;
		min-height: 100vh;
		z-index: 100;
		flex-flow: column nowrap;
		align-items: center;
		justify-content: center;
		transition 0.2s cubic-bezier(1, 0.01, 0.85, 0.99)
		background-color: $white
		.title
			color: $lightgrey2;
			font-weight: 500;
			font-size: 30%;
			margin auto
	
		button
			margin: auto 
		.regions
			align-items: center;
			display: flex;
		ul
			display: flex;
			padding: 0;
			justify-content: center;
			width 100%
			flex-flow: row wrap;
			margin 2rem auto
			@media screen and (max-width: $iphone6)
				overflow auto
				margin 0
				&.language
					flex-flow: row nowrap;
					@media screen and (max-width: $iphone6)
						flex-flow: row wrap;
			li
				margin: 1rem auto;
				@media screen and (max-width: $iphone6)
					margin: .1rem auto;
				min-width: 300px;
				@media all and (orientation: portrait) and (max-width $ipadPro)
					width: 100%;
				a
					font-size: 70%;
					font-weight: 500;
					line-height: 110%;
					margin: auto;
					transition $transition
					&:hover
						color $specialRed
			&.language 
				li
					margin 2rem
					@media screen and (max-width: $iphone6)
						margin .1rem
					display: flex;
					flex-flow: column wrap;
					align-items: center;

