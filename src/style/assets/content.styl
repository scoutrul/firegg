section.content
	display flex
	min-height: 100%;
	padding: 5rem 0 3rem 0;
	.container
		flex-flow: column wrap;
		align-self: center
	&.index-about
		padding 0
		.container
			height: 100%;
			flex-direction column
			align-items: center;
			text-align: center;
			justify-content: center
			min-height 600px
			margin auto
			.title
				title_light()
				@media screen and (max-width: $iphone6H)
					font-size 100%
					line-height 100%
				@media screen and (max-width: $iphone)
					font-size 90%
					line-height 100%
			.link_under
				text_underscore(#DDD, $darkgrey2)
				font-size 70%
				