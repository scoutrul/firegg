section.content
	display flex
	min-height: 100%;
	padding: 5rem 0 3rem 0;
	&.tabs 
		padding-top: 300px
	.container
		flex-flow: column wrap;
		align-self: center
		margin-top: 0;
		align-items: center;
	&.index-about
		padding 0
		min-height: 100vh;
		.container
			height: 100%;
			flex-direction column
			align-items: center;
			text-align: center;
			justify-content: center
			min-height 600px
			margin auto
			.title
				title_light()
				@media screen and (max-width: $iphone6H)
					font-size 100%
					line-height 100%
				@media screen and (max-width: $iphone)
					font-size 90%
					line-height 100%
			.link_under
				text_underscore(#DDD, $darkgrey2)
				font-size 70%
	.content_block
		margin-top: 1.5rem;
		font-size: 40%;
		font-weight: 400;
		line-height: 170%;
		p
			display: block;
			margin-bottom 1rem

				