section.content.product
	ul.product-list
		padding: 0.6rem;
		margin-top: 1.5rem;
		width: 100%;
		display: flex;
		flex-flow: row wrap;
		justify-content: center;
		li
			margin: 0.3rem 0 0 -1.2rem;
			@media screen and (max-width: $iphone)
				margin: .5rem !important
			
			height: 4.4rem;
			width: 50%;
			min-width: 300px;
			background-color: $lightgrey3;
			display: flex;
			align-items: flex-end;
			padding: 0 0.5rem;
			overflow: visible;
			background-image url('http://bushwalk.npansw.org.au/wp-content/uploads/2017/02/placeholder-1024x683.png')
			background-size 100%
			background-position: center;
			transition background 3s ease-in
			span
				bottom -.3rem
				font-size 70%
			&:nth-child(2n)
				margin 1rem -1.2rem 0.4rem 1.2rem
			&:hover
				background-size 120%
				
				
	#productsSwitcher
		display: flex;
		margin: auto;
		font-size: 70%;
		padding: 0;
		flex-flow: row wrap;
		justify-content: center;
		li
			border-bottom: 1px solid $specialGrey;
			padding: 0.3rem 1.2rem 0.3rem 1.2rem;
			cursor pointer
			@media screen and (max-width: $iphone5)
				padding: 0 0.3rem;
			&.active
				border-bottom: 3px solid $specialRed;
				color $specialRed
				.Lorem 
					font-size: 30%;