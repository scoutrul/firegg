section.contact
	.container
		ul.office-tab
			margin 0 auto
			padding 0
			display flex
			flex-flow row wrap
			justify-content: center;
			align-items: center;
			li
				flex 1 0 auto
				white-space nowrap
				margin: 1rem .4rem;
				cursor: pointer;
				text-align: center;
				@media screen and (max-width: $ipad)
					margin: .6rem;
				@media screen and (max-width: $iphone5)
					margin: .1rem;
				a
					font-size: 25%;
					transition: $transition 
					&:hover
						color $specialRed
					&:before
						content ''
						width: 0.3rem;
						height: 0.3rem;
						display: block;
						margin: 0.1rem auto;
				&.office-tab--active
					a
						color $specialRed
						&:before
							background-image: url(../images/icon_pin.svg);
							background-repeat: no-repeat;
		#offices
			display: flex;
			flex-flow: column wrap;
			margin 1rem auto
			width: 100%;
			address
				width 100%
				.hide
					display none
				.adr
					display: flex;
					flex-flow: column wrap;
					align-items: center;
					justify-content: center;
					span, a
						line-height 200%
						&:after
							margin 0 auto
					font-weight 500
					text-align: center;
					.location
						display flex
						span 
							margin 0 .2rem
							
				.call,.info
					display: flex;
					flex-flow: column wrap;
					align-items: center;
					justify-content: center;
					font-size: 55%;

					span, a
						text_underscore(#DDD, #232323)
							
				.call
					flex-flow row nowrap
					white-space: nowrap;
					flex: 1 0 150px;
					@media screen and (max-width: $iphone5)
						flex-flow column wrap
					.fax,.tel
						display inline-block
						margin: 0 1rem;
						padding 0
				.info
					margin: 1rem 0;

		.social
			display: flex;
			flex-flow: column wrap;
			align-items: center;
			width: 100%;
			justify-content: center;
			text-align: center;
			.slogan 
				font-weight: 900;
				line-height: 90%;
				text-transform: uppercase;
				margin: 5rem auto 2rem
			ul.links
				display flex 
				padding 0
				width 100%
				flex-flow row wrap
				justify-content: center;
				li
					flex: 1 0 150px;
					margin: 0.4rem 0;
					font-size: 55%;
					@media screen and (max-width: $iphone6)
						font-size: 75%;
					a
						text_underscore(#DDD, #232323)
						font-weight: 600;
		ul.forces
			margin 4.5rem auto 1rem auto
			padding 0
			display flex
			flex-flow row wrap
			li
				flex 1 0 25%

				@media screen and (max-width: $ipad)
					flex 1 0 50%
				@media screen and (max-width: 400px)
					flex 1 0 100%
				span
					padding 10px
					display block
					font-size 35%
					.force-name
						margin: 0.5rem 0
						font-weight: 600;
					.force-address,.force-tel,.force-fax
						font-weight: 400;
						font-size: 60%;
						line-height: 200%;